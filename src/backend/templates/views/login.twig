{% extends "/layout/layout.twig" %}

{% block content %}
    <form autocomplete="on" method="POST" action="/login" class="p-login-form">
        <div class="p-login-form__form-field">
            {% include "/components/input.twig" with {
                attrs: {
                    type: "text",
                    name: "username",
                    "aria-label": "Username",
                    placeholder: "Username",
                    required: true,
                    autofocus: true,
                }
            } %}
        </div>

        <div class="p-login-form__form-field">
            {% include "/components/input.twig" with {
                attrs: {
                    type: "password",
                    name: "password",
                    "aria-label": "Password",
                    placeholder: "Password",
                    required: true,
                }
            } %}
        </div>

        {% include "/components/button.twig" with {
            content: "Login",
            props: {
                size_variant: 'flex',
            },
            attrs: {
                type: "submit",
            }
        } %}
    </form>
{% endblock %}
